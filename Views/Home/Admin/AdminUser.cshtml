@model List<ASP.NET_Project.Models.User>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section Title {
    Admin User
}

<div class="header-color"></div>
<div class="project-container users-container">
    <div class="scroll-container">
        <table id="example" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th style="width: 5vw;">Name</th>
                    <th>Email</th>
                    <th>Password</th> <!-- For security, consider hashing or encrypting passwords -->
                    <th>Role</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var user = Model[i];
                    <tr>
                        <td style="text-align: center;">@(i + 1)</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td> <!-- Display Email -->
                        <td>@user.Password</td> <!-- Display Password -->
                        <td>@user.Role.RoleName</td> <!-- Assuming you have RoleName property in Role model -->
                        <td>@(user.IsActive ? "Active" : "Inactive")</td> <!-- Display Active/Inactive status -->
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    Action
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Edit</a></li>
                                    <li><a class="dropdown-item" href="#">Delete</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    document.getElementById("adminUser").classList.add("active");
</script>
