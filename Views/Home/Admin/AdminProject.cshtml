@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section Title{
    Admin Projects
}

<div class="header-color"></div>
<!-- Button trigger modal -->
<div class="btn-right"><button type="button" class="btn btn-primary add-proj" data-bs-toggle="modal" data-bs-target="#exampleModal">
 <i class="bi bi-plus-circle-fill"></i>Add Project
</button></div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="project-container">
  <div class="scroll-container">
<table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>#</th>
                <th style="width: 10vw;">Project Name</th>
                <th>Start Date</th>
                <th>Due Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="text-align: center;">1</td>
                <td>System Architect</td>
                <td>2011-04-25</td>
                <td>2011-04-25</td>
                <td>On-going</td>
                <td>$320,800</td>
            </tr>
            <tr>
                <td style="text-align: center;">2</td>
                <td>Accountant</td>
                <td>2011-04-25</td>
                <td>2011-07-25</td>
                <td>On-going</td>
                <td>$170,750</td>
            </tr>
            <tr>
                <td style="text-align: center;">3</td>
                <td>Junior Technical Author</td>
                <td>2011-04-25</td>
                <td>2011-07-25</td>
                <td>On-going</td>
                <td>$86,000</td>
            </tr>
            
        </tbody>
        
    </table>
  </div>
</div>

@section Scripts {
  <script>
    document.querySelector('.collapse-btn').classList.add("active");
    document.querySelector('.bi-send-fill').style.color = "white";
    document.querySelector('.collapse-btn').style.color = "white";
  </script>
}