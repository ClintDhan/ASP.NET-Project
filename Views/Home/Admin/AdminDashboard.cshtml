@{
    Layout = "~/Views/Shared/AdminLayout.cshtml"; // Adjust path as necessary
}

@section Title {
Admin Dashboard
}

<div class="header-color"></div>

<div class="dashboard-portion">

    <!-- Completed Projects Section -->
    <div class="dashboard-portion-flex completed-projects">
        <div>
            <div class="icon-container green">
                <i class="bi bi-check-circle-fill"></i>
            </div>
        </div>
        <div>
            <p class="portion-count">@ViewBag.CompletedCount</p> <!-- Updated count -->
            <p class="portion-title">Completed Projects</p>
        </div>
    </div>

    <!-- Ongoing Projects Section -->
    <div class="dashboard-portion-flex ongoing-projects">
        <div>
            <div class="icon-container blue">
                <i class="bi bi-arrow-repeat"></i>
            </div>
        </div>
        <div>
            <p class="portion-count">@ViewBag.InProgressCount</p> <!-- Updated count for ongoing projects -->
            <p class="portion-title">On-going Projects</p>
        </div>
    </div>

    <!-- Overdue Projects Section -->
    <div class="dashboard-portion-flex overdue-projects">
        <div>
            <div class="icon-container red">
                <i class="bi bi-exclamation-diamond-fill"></i>
            </div>
        </div>
        <div>
            <p class="portion-count">@ViewBag.OverdueCount</p> <!-- Updated count -->
            <p class="portion-title">Overdue Projects</p>
        </div>
    </div>
</div>

<div class="dashboard-table-container">
   
</div>

@section Scripts {
    <script>
        document.getElementById("adminDashboard").classList.add("active");
    </script>
}
