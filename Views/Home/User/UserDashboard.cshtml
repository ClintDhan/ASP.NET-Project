
@{
    Layout = "~/Views/Shared/UserLayout.cshtml"; // Adjust path as necessary
}

@section Title {
    User Dashboard
}

<div class="header-color"></div>

<div class="dashboard-portion">

    <div class="dashboard-portion-flex ongoing-projects">
        <div>
            <div class="blue"><i class="bi bi-arrow-repeat"></i></div>
        </div>
        <div>
            <p class="portion-count">@Model.OngoingProjects.Count</p>
            <p class="portion-title">On-going Projects</p>
        </div>
    </div>

    <div class="dashboard-portion-flex completed-projects">
        <div>
            <div class="green"><i class="bi bi-check-circle-fill"></i></div>
        </div>
        <div>
            <p class="portion-count">@Model.CompletedProjects.Count</p>
            <p class="portion-title">Completed Projects</p>
        </div>
    </div>

    <div class="dashboard-portion-flex overdue-projects">
        <div>
            <div class="red"><i class="bi bi-exclamation-diamond-fill"></i></div>
        </div>
        <div>
            <p class="portion-count">@Model.OverdueProjects.Count</p>
            <p class="portion-title">Overdue Projects</p>
        </div>
    </div>
</div>

<div class="dashboard-table-container">
    <h2>Project History</h2>

    <table class="dashboard-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
           
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        document.getElementById("UserDashboard").classList.add("active");
    </script>
}
