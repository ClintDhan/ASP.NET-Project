    if ($.fn.dataTable.isDataTable('#example3')) {
        $('#example3').DataTable().destroy();
    }

    // Initialize DataTable with desired options
    $('#example3').DataTable({
        pageLength: 50, // Set default page length to 50
        // Add any other options you need
    });
});





        
    </script>

@if (ViewBag.Error != null && ViewBag.Error == true)
{
    <script>
        $(document).ready(function () {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: '@ViewBag.ErrorMessage',
            });
        });
    </script>
}


</body>



</html>
